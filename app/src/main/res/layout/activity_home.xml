<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/settings__wealth_status__store" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!--Part Biography-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/part_bio_background_home"
                tools:ignore="NestedWeights">

                <ImageButton
                    android:id="@+id/btn_part_biography_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/part_bio_home"
                    android:contentDescription="@string/todo" />
            </RelativeLayout>

            <!--Username and User Image-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--Username-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/username_background_home"
                    android:padding="5dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/tv_username_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="top|center"
                        android:background="#000"
                        android:gravity="center"
                        android:maxLength="20"
                        android:text="@string/username"
                        android:textColor="#FFEA00"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!--User Image-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:background="@drawable/profile_image_background_home">

                    <ImageView
                        android:id="@+id/img_profile_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@string/todo"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:src="@drawable/character_e" />

                </RelativeLayout>

            </LinearLayout>

            <!--Part game-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/part_game_background_home">

                <ImageButton
                    android:id="@+id/btn_part_game_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/part_game_home"
                    android:contentDescription="@string/todo" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!--    guide-->
    <RelativeLayout
        android:id="@+id/layout_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

</RelativeLayout>
